<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.ezeqlabs.selltimer.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contatos_hoje"
            android:padding="16dp"
            android:textColor="@color/branco"
            android:background="@color/vermelhoCrimson"
            />

        <ListView
            android:id="@+id/listview_hoje"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/vermelhoPink"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contatos_semana"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/branco"
            android:background="@color/amareloGoldenrod"
            />

        <ListView
            android:id="@+id/listview_semana"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/amareloLightYellow"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contatos_mes"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/branco"
            android:background="@color/azulSteelBlue"
            />

        <ListView
            android:id="@+id/listview_mes"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/azulLightBlue"
            />

    </LinearLayout>

</ScrollView>
